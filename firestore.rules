rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Settings - single document
    match /settings/user {
      allow read, write: if true; // Single user app
    }

    // Meals collection
    match /meals/{mealId} {
      allow read, write: if true; // Single user app
    }

    // Daily exercise tracking
    match /exercise/{dateId} {
      allow read, write: if true; // Single user app
    }
  }
}
